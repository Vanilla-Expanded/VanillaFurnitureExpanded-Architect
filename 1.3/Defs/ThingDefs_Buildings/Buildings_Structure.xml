        <li>FenceGate</li>
      </relatedBuildCommands>
      <blueprintGraphicData>
        <texPath>Fences/ChainlinkFence/ChainlinkFence_Blueprint_Atlas</texPath>
        <graphicClass>Graphic_Single</graphicClass>
      </blueprintGraphicData>
    </building>
    <researchPrerequisites>
      <li>Smithing</li>
    </researchPrerequisites>
